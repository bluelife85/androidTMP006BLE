<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="blog.naver.com.tmp006example.TMP006Activity" >

    <TextView
        android:id="@+id/txt_vobj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/vobj_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_tamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_vobj"
        android:layout_alignBottom="@id/txt_vobj"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/tamb_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/value_vobj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_vobj"
        android:layout_below="@id/txt_vobj"
        android:layout_marginTop="25dp"
        android:text="@string/defualt_value"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/value_tamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/value_vobj"
        android:layout_alignBottom="@id/value_vobj"
        android:layout_alignLeft="@id/txt_tamb"
        android:text="@string/defualt_value"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/measure_text_view"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/value_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="@string/default_measured_temperature"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>